alias SP="source $HOME/.profile"
alias ls='exa'
alias ll='exa -alF'
alias la='exa -A'
alias l='exa -F'

alias TMS="date -u +\"%Y-%m-%dT%H:%M:%S.%3N\""
alias CDOWN='curl -fsSLO'


n() {
    export NNN_TMPFILE=$(date -u +"/tmp/NNN_TEMP_%Y-%m-%d")
    touch    $NNN_TMPFILE
    chmod +x $NNN_TMPFILE
    echo     $NNN_TMPFILE

    command nnn -a

    . $NNN_TMPFILE

    # rm -f $NNN_TMPFILE > /dev/null
}

alias nnn='nnn -a'

if [ -n $WAYLAND_DISPLAY ]; then 
    NNN_PLUG_PREVIEW='p:preview-tui'
else 
    NNN_PLUG_PREVIEW='p:preview-tabbed'
fi

NNN_PLUG_DEFAULT="$NNN_PLUG_PREVIEW;d:diffs"
NNN_PLUG="$NNN_PLUG_DEFAULT"

export NNN_PLUG

if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH
fi

export PATH=$PATH:$HOME/dotfiles/scripts/scripts

[[ -f ~/._private_profile ]] && source ~/._private_profile
